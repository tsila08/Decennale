{% extends "::layout.html.twig" %}
{% block title %}{{ parent() }}-Ajouter un administrateur {% endblock %}	

{% block contenu %}
		<br>
		<h2>Ajouiter un nouveau administrateur</h2>
		<div class="registration-grids">
			<div class="reg-form">
				<div class="reg">
					 <p>Welcome, please enter the following details to continue.</p>
					 
					{% if form_errors(form)%}
					 <div class="alert alert-danger">  {{ form_errors(form) }} </div>
					 {% endif %}
					 {% if (message) %}
						<div class="alert alert-warning">  {{ message }} </div>
					 {% endif %}
					 <form  method="post" action="{{path('bds_utilisateur_creercompte_admin')}}" {{ form_enctype(form) }}>
						 <ul>
							 <li class="text-info">Nom : </li>
							 <li>{{ form_widget(form.username) }}</li>
						 </ul>
						 <ul>
							 <li class="text-info">Mail : </li>
							 <li>{{ form_widget(form.mail) }}</li>
						 </ul>				 
						<ul>
							 <li class="text-info">Mot de passe : </li>
							 <li>{{ form_widget(form.password) }}</li>
						 </ul>
<!--
						 <ul>
							 <li class="text-info">Password: </li>
